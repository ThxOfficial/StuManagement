/* pages/register/pswd/pswd.wxss */
.a, .b, .c, .clspswd1, .clspswd2, .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10px 0;
}

.a, .b, .c {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

input {
  width: 80%;
  padding: 10px;
  margin: 5px 0;
  border: 2px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.3s, box-shadow 0.3s;
}

input:focus {
  border-color: #007aff;
  outline: none;
  box-shadow: 0 0 5px rgba(0, 122, 255, 0.5);
}

.button {
  width: 80%;
  padding: 10px;
  margin: 10px 0;
  border: none;
  border-radius: 10px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s, transform 0.3s;
}

.button:hover {
  transform: scale(1.05);
}

.cfm {
  background-color: #4CAF50;
  color: white;
}

.cfm:hover {
  background-color: #45a049;
}

.back {
  background-color: #007aff;
  color: white;
}

.back:hover {
  background-color: #005bb5;
}

.bg{
  background-image: url(https://tannhauser.oss-cn-beijing.aliyuncs.com/bgpic/bg1.png);
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height:fit-content;
  min-height: 1500rpx;
  background-attachment: fixed;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.a, .b, .c, .clspswd1, .clspswd2, .btn {
  animation: fadeIn 1.5s ease-in-out;
}
