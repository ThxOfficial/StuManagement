/* pages/student/selcour/selcour.wxss */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #f0f0f5;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

text {
  font-size: 24px;
  color: #4a4a4a;
  margin: 20px 0;
}

.sear {
  width: 90%;
  background-color: #aedbf0;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sear input {
  width: 80%;
  padding: 10px;
  margin: 10px 0;
  border: 2px solid #007bff;
  border-radius: 5px;
}

.sear button {
  width: 80%;
  padding: 10px;
  margin: 10px 0;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.sear button:hover {
  background-color: #0056b3;
}

.rs {
  width: 90%;
  background-color: #c9f75d;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  margin-bottom: 20px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
}

.ta, .tb, .del {
  flex: 1;
  text-align: center;
  padding: 10px;
  border-right: 1px solid #ddd;
}

.ta {
  font-weight: bold;
  color: #333;
  background-color: #f7f7f7;
}

.tb {
  color: #666;
}

.del {
  color: #007bff;
  cursor: pointer;
  transition: color 0.3s ease;
}

.del:hover {
  color: #0056b3;
}

.rs:last-child .del {
  border-right: none;
}

.bg{
  background-image: url(https://tannhauser.oss-cn-beijing.aliyuncs.com/bgpic/bg3.png);
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height:fit-content;
  min-height: 1500rpx;
  background-attachment: fixed;
}