/* pages/teacher/home/detail/detail.wxss */
body {
  font-family: 'San Francisco', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f0f0f5;
  margin: 0;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

text {
  font-size: 28px;
  color: #333;
  margin: 20px 0;
  text-align: center;
}

button {
  width: 200px;
  padding: 12px;
  margin: 10px 0;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
  font-size: 16px;
}

button:hover {
  background-color: #005bb5;
  transform: scale(1.05);
}

.rs {
  width: 80%;
  max-width: 800px;
  background-color: #ffffff;
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  margin-bottom: 20px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rs .ta, .rs .tb, .rs .del {
  width: 100%;
  text-align: left;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.rs .ta {
  font-weight: bold;
  color: #1976d2;
}

.rs .tb {
  color: #424242;
}

.rs .del {
  color: #ff4081;
  cursor: pointer;
  transition: color 0.3s ease;
  display: inline-block;
  margin: 10px 0;
}

.rs .del:hover {
  color: #d81b60;
}

.rs:nth-child(even) {
  background-color: #e1f5fe;
}

.rs:nth-child(odd) {
  background-color: #ffecb3;
}

.rs:hover {
  background-color: #c5cae9;
}

@media (min-width: 768px) {
  .rs {
      padding: 40px;
  }
}

.rs img {
  max-width: 100%;
  border-radius: 5px;
  margin-bottom: 20px;
}

.bg{
  background-image: url(https://tannhauser.oss-cn-beijing.aliyuncs.com/bgpic/bg3.png);
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height:fit-content;
  min-height: 1500rpx;
  background-attachment: fixed;
}