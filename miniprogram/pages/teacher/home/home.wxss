swiper{
  width: 100%;
  height: calc(100vw*442/810);
}

page{
  height:100%;
}

.swpimg{
  width: 100%;
}

body {
  font-family: 'San Francisco', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #d6d6f7;
  margin: 0;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

text {
  font-size: 28px;
  color: #333;
  margin: 20px 0;
  text-align: center;
}

.sear {
  width: 80%;
  max-width: 800px;
  background-color: #d2f7e4;
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  border-radius: 50px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.sear input {
  width: 80%;
  padding: 12px;
  margin: 10px 0;
  border: 2px solid #007aff;
  border-radius: 10px;
  background-color: #e1f5fe;
  color: #007aff;
  font-size: 16px;
}

.sear input:hover {
  background-color: #bbdefb;
}

.sear button {
  width: 80%;
  padding: 12px;
  margin: 10px 0;
  background-color: #ff4081;
  color: #fff;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
  font-size: 16px;
}

.sear button:hover {
  background-color: #d81b60;
  transform: scale(1.05);
}

.rs {
  width: 80%;
  max-width: 800px;
  background-color: transparent;
  box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  border-radius: 20px;
  margin-bottom: 20px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rs .ta,
.rs .tb,
.rs .del {
  width: 100%;
  text-align: left;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.rs .ta {
  font-weight: bold;
  color: #1976d2;
}

.rs .tb {
  color: #424242;
}

.rs .del {
  color: #ff4081;
  cursor: pointer;
  transition: color 0.3s ease;
  display: inline-block;
  margin: 10px 0;
}

.rs .del:hover {
  color: #d81b60;
}

.rs:nth-child(even) {
  background-color: #e1f5fe;
}

.rs:nth-child(odd) {
  background-color: #ffecb3;
}

.rs:hover {
  background-color: #c5cae9;
}

.bg{
  background-image: url(https://tannhauser.oss-cn-beijing.aliyuncs.com/bgpic/bg4.png);
  padding-top: 0rpx;
  padding-bottom: 0rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height:fit-content;
  min-height: 1500rpx;
  background-attachment:fixed;
}

.allinfo{
  padding-bottom: 150rpx;
}