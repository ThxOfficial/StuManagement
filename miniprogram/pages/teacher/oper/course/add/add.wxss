/* pages/teacher/oper/course/add/add.wxss */
.text {
  font-family: "Comic Sans MS", cursive, sans-serif;
  font-size: 22px;
  color: #ff4500;
  margin-bottom: 20px;
  text-shadow: 2px 2px 4px #000000;
}

.cg input {
  width: 100%;
  padding: 12px;
  border: 2px solid #ff4500;
  border-radius: 10px;
  margin-bottom: 15px;
  font-size: 18px;
  background-color: #f0e68c;
  color: #333;
  box-shadow: 2px 2px 5px #888888;
}

button {
  width: 100%;
  padding: 15px;
  background-color: #ff4500;
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 18px;
  cursor: pointer;
  margin-bottom: 15px;
  transition: all 0.3s ease;
}

button:hover {
  background-color: #ff6347;
  transform: scale(1.05);
}

button:active {
  transform: scale(0.95);
}

view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

text {
  margin-bottom: 10px;
  color: #ff4500;
  font-size: 16px;
  text-shadow: 1px 1px 2px #000000;
}

image {
  width: 120px;
  height: 120px;
  border-radius: 10%;
  margin-bottom: 20px;
  box-shadow: 2px 2px 8px #888888;
}

.bg{
  background-image: url(https://tannhauser.oss-cn-beijing.aliyuncs.com/bgpic/bg5.png);
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height:fit-content;
  min-height: 1500rpx;
  background-attachment: fixed;
}