/* pages/teacher/oper/course/course.wxss */
.button {
  padding: 10px 15px;
  margin: 5px;
  border: none;
  border-radius: 5px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s, transform 0.3s;
}

.button:hover {
  transform: scale(1.05);
}

.precise {
  background-color: #4CAF50;
  color: white;
}

.precise:hover {
  background-color: #45a049;
}

.fuzzy {
  background-color: #2196F3;
  color: white;
}

.fuzzy:hover {
  background-color: #1976D2;
}

.add {
  background-color: #FF9800;
  color: white;
}

.add:hover {
  background-color: #FB8C00;
}

.back {
  background-color: #9E9E9E;
  color: white;
}

.back:hover {
  background-color: #757575;
}

.dld {
  background-color: #ff0202;
  color: white;
}

.dld:hover {
  background-color: #949df3;
}

.bg{
  background-image: url(https://tannhauser.oss-cn-beijing.aliyuncs.com/bgpic/bg5.png);
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height:fit-content;
  min-height: 1500rpx;
  background-attachment: fixed;
}

.action {
  background-color: #E91E63;
  color: white;
  margin-top: 10px;
}

.modify {
  background-color: #F44336;
}

.modify:hover {
  background-color: #D32F2F;
}

.delete {
  background-color: #9C27B0;
}

.delete:hover {
  background-color: #7B1FA2;
}

.course-image {
  width: 100px;
  height: 100px;
  border-radius: 8px;
  margin-right: 10px;
}

.course-detail {
  display: flex;
  flex-direction: column;
  padding: 10px;
  margin: 10px 0;
  background-color: #F9F9F9;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.course-info {
  display: flex;
  flex-wrap: wrap;
}

.title {
  width: 70px;
  font-weight: bold;
}

.content {
  width: calc(100% - 70px);
  margin-bottom: 5px;
}

